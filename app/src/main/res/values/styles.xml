<resources>

    <!-- Base application theme. -->
    <style name="AppThemeBase" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppThemeBase.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppThemeBase.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!-- Light Theme -->
    <style name="AppThemeLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/pri_light</item>
        <item name="android:colorForeground">@color/sec_light</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/pri_dark</item>
        <item name="android:textColorPrimaryInverse">@color/sec_light</item>
        <item name="android:textColorSecondary">@color/sec_dark</item>
        <item name="android:textColorSecondaryInverse">@color/pri_light</item>
        <item name="android:windowBackground">@color/pri_light</item>
    </style>

    <!-- Dark Theme -->
    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorBackground">@color/pri_dark</item>
        <item name="android:colorForeground">@color/sec_dark</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:navigationBarColor">@color/primary_dark</item>
        <item name="android:textColorPrimary">@color/pri_light</item>
        <item name="android:textColorPrimaryInverse">@color/sec_dark</item>
        <item name="android:textColorSecondary">@color/sec_light</item>
        <item name="android:textColorSecondaryInverse">@color/pri_dark</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:windowBackground">@color/pri_dark</item>
    </style>

</resources>
